<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/btnUp"
        android:layout_marginLeft="78dp"
        android:src="@drawable/up"
        android:scaleType="fitCenter"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:layout_above="@+id/btnRight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/btnDown"
        android:src="@drawable/down"
        android:scaleType="fitCenter"
        android:layout_below="@+id/btnLeft"
        android:layout_alignLeft="@+id/btnUp"
        android:layout_alignStart="@+id/btnUp"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/btnRight"
        android:src="@drawable/right"
        android:scaleType="fitCenter"
        android:layout_toEndOf="@+id/btnDown"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/btnOkay"
        android:layout_toRightOf="@+id/btnDown" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/btnLeft"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btnDown"
        android:layout_toStartOf="@+id/btnDown"
        android:src="@drawable/left"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="OK"
        android:id="@+id/btnOkay"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/btnUp"
        android:layout_alignEnd="@+id/btnUp"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/btnY"
        android:src="@drawable/y"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_toStartOf="@+id/btnB"
        android:layout_above="@+id/btnB"
        android:layout_toLeftOf="@+id/btnB" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/btnB"
        android:src="@drawable/b"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_above="@+id/btnDown"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/btnA"
        android:src="@drawable/a"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_toStartOf="@+id/btnB"
        android:layout_below="@+id/btnB"
        android:layout_toLeftOf="@+id/btnB" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/btnX"
        android:src="@drawable/x"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_toStartOf="@+id/btnA"
        android:layout_above="@+id/btnA"
        android:layout_toLeftOf="@+id/btnA" />
</RelativeLayout>
